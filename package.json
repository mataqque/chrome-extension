{
	"name": "infinix-frontend",
	"private": true,
	"version": "latest",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"format": "prettier --write .",
		"lint": "eslint ./src",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"prepare": "husky install",
		"husky": "npx husky add .husky/commit-msg 'npx --no -- commitlint --edit ${1}'",
		"prerelease": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
		"setup-ts": "yarn plugin import typescript && yarn dlx @yarnpkg/sdks vscode"
	},
	"proxy": "http://localhost:5000/",
	"dependencies": {
		"@emotion/react": "^11.10.5",
		"@emotion/styled": "^11.10.5",
		"@material-ui/core": "^4.12.4",
		"@mui/icons-material": "^5.11.0",
		"@mui/material": "^5.10.16",
		"@reduxjs/toolkit": "^1.9.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"formik": "^2.4.5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-redux": "^8.0.5",
		"react-router": "^6.11.2",
		"react-router-dom": "^6.4.4",
		"react-toastify": "^9.1.1",
		"redux-thunk": "^2.4.2",
		"rsuite": "^5.23.0",
		"rxjs": "^7.8.0",
		"vite-plugin-require": "^1.1.10",
		"web-vitals": "^3.1.0",
		"yup": "^0.32.11"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.3.0",
		"@commitlint/config-conventional": "^17.3.0",
		"@types/prop-types": "^15",
		"@types/react": "^18.0.24",
		"@types/react-dom": "^18.0.8",
		"@types/react-redux": "^7.1.31",
		"@vitejs/plugin-react": "^2.2.0",
		"autoprefixer": "^10.4.13",
		"husky": "^8.0.2",
		"node-sass": "^8.0.0",
		"postcss": "^8.4.20",
		"prettier": "^2.8.7",
		"prop-types": "^15.8.1",
		"react-is": "^18.2.0",
		"sass": "^1.56.1",
		"standard": "^17.0.0",
		"standard-version": "^9.5.0",
		"tailwindcss": "^3.2.4",
		"typescript": "*",
		"vite": "^3.2.3",
		"vite-plugin-sass-dts": "^1.2.5",
		"vite-svg-loader": "^3.6.0",
		"vitest": "^0.25.3"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"release-it": {
		"git": {
			"commitMessage": "chore(release): ${version}"
		},
		"github": {
			"release": true,
			"releaseName": "v${version}"
		},
		"npm": {
			"publish": false
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"infile": "CHANGELOG.md",
				"outfile": "CHANGELOG.md",
				"preset": {
					"name": "conventionalcommits",
					"types": [
						{
							"type": "feat",
							"section": "Features"
						},
						{
							"type": "fix",
							"section": "Bug Fixes"
						}
					]
				}
			}
		}
	}
}
